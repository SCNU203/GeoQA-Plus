{
     "dataset_reader": {
        "type": "s2s_manual_reader",
        "tokenizer": {
        "word_splitter":{
        "type": "just_spaces"
           }
       },
        "source_token_indexer": {
          "tokens": {
          "type": "pretrained_transformer",
          "model_name": "data/pretrain/chinese_bert",
            "do_lowercase": false
                    }
        },
      "target_token_indexer": {
     "tokens": {
        "type": "single_id"
      }
      }
    },

  "train_data_path": "data/GeoQA2.2/train.pk",
  "validation_data_path": "data/GeoQA2.2/dev.pk",
  "test_data_path" : "data/GeoQA2.2/test.pk",
    "model": {
    "type": "geo_s2s",
    "max_decoding_steps": 16,
    "beam_size": 10,

    "target_embedding_dim": 512,
    "scheduled_sampling_ratio": 0,
    "resnet_pretrained": "data/pretrain/best_jigsaw_model_state_dict",
    "knowledge_points_ratio": 0,
     "source_embedder": {
        "token_embedders": {

        }
            },
    "encoder": {
        "input_dim": 21128,
        "emb_dim": 768,
        "hid_dim": 512,
        "dropout": 0.5
    }
},
    "iterator": {
    "type": "basic",
    "batch_size": 32
  },
     "trainer": {
    "validation_metric": "+acc",
       "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 5
    },
    "num_epochs": 100,
    "grad_norm": 10.0,
    "cuda_device": 0,

    "optimizer": {
      "type": "adam",
      "lr": 1e-3,
      "parameter_groups": [
        [["mcan", "channel_transform", "attflat_img", "attflat_lang", "decode_transform"], {"lr": 1e-5}],
        [["resnet"], {"lr": 1e-5}],
        [["source_embedder","encoder.embedding"],{"lr": 2e-5}],
        [[ "encoder.concat_trans", "encoder.lstm_embedding","encoder.trans", "encoder.norm", "encoder.concat_norm"],{"lr": 1e-3}]
      ]
    }
  }
}